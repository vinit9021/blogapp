<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Create Blog Post</title>
  <link rel="stylesheet" href="/stylesheets/createpost.css">
</head>
<body>
  <div class="container">
    <h1>Create a New Blog Post</h1>

    <% if (errors.length > 0) { %>
      <div class="error-box">
        <ul>
          <% errors.forEach(error => { %>
            <li><%= error.msg %></li>
          <% }) %>
        </ul>
      </div>
    <% } %>

    <form action="/createpost" method="POST" class="post-form">
      <label for="title">Title:</label>
      <input type="text" id="title" name="title" value="<%= oldInput.title || '' %>" required>

      <label for="content">Content:</label>
      <textarea id="content" name="content" rows="8" required><%= oldInput.content || '' %></textarea>

      <button type="submit" class="btn">Create Post</button>
    </form>
  </div>
</body>
</html>
